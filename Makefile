#############################################################
# Variables                                                 #
#############################################################

# C++ compiler
CXX      = g++

# C++ compiler flags
CXXFLAGS := -std=c++17 -g -pthread
# CXXFLAGS := -std=c++17 -O3 -pthread

# Linker
LINK     := $(CXX)

# Linker flags
LDFLAGS  := -lpthread

#############################################################
# Rules                                                     #
#############################################################

driver : driver.o 
	$(LINK) $(LDFLAGS) $^ $(LDLIBS) -o $@

driver.o : driver.cpp Cube.hpp

#############################################################

clean :
	@$(RM) driver a.out core
	@$(RM) *.o
	@$(RM) *.d
	@$(RM) *~ 

#############################################################

